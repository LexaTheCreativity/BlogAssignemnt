@model assignemnt_4.Models.Blog
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<link rel="stylesheet" href="/css/BlogAdd.css">
<body>
<div class="text-center" id="HeadlineAdd">
    <h1>Add a post</h1> 
</div>
<br>
<div class="text-center" id="AddPostLayout">
    <form asp-controller="Blog" asp-action="Add" method="post">
        <div class="form-group">
            <input asp-for="Title" id="Title" type="text" required placeholder="title" class="form-control">
        </div>
        <br>
        <div class="form-group">
            <textarea asp-for="Summary" id="Summary" type="text" required placeholder="Summary" class="form-control"></textarea>
        </div>
        <br>
        <div class="form-group">
            <textarea asp-for="Content" id="Content"  type="text" required placeholder="Content" class="form-control"></textarea>
        </div>
        <br>
        <div class="form-group">
             <input id="Submit" type="submit" value="Submit" class="form-control">
        </div>
    </form>

</div>

</body>